<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="927.0" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaapp3.SignupController">
    <children>
        <VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);" AnchorPane.bottomAnchor="137.0" AnchorPane.leftAnchor="264.0" AnchorPane.rightAnchor="263.0" AnchorPane.topAnchor="137.0">
            <children>
                <Label text="Create Admin Account">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                
                <!-- حقل الإيميل -->
                <VBox prefWidth="320.0" spacing="5.0">
                    <children>
                        <Label text="Email Address" />
                        <TextField fx:id="emailField" prefHeight="40.0" promptText="Enter your email" />
                    </children>
                </VBox>
                
                <!-- حقل كلمة المرور -->
                <VBox prefWidth="320.0" spacing="5.0">
                    <children>
                        <Label text="Password" />
                        <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Create a password" />
                    </children>
                </VBox>

                <!-- زر إنشاء الحساب -->
                <Button onAction="#handleSignUpButton" prefHeight="45.0" prefWidth="320.0" style="-fx-background-color: #000080; -fx-text-fill: white; -fx-background-radius: 5;" text="Sign Up">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>

                <!-- رابط العودة لتسجيل الدخول -->
                <Hyperlink onAction="#handleLoginLink" text="Already have an account? Log in" />
            </children>
        </VBox>
    </children>
</AnchorPane>