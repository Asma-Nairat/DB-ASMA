<!-- تأكد من أن مسار الكنترولر صحيح -->
<AnchorPane prefHeight="724.0" prefWidth="955.0" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaapp3.LoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);" AnchorPane.bottomAnchor="137.0" AnchorPane.leftAnchor="278.0" AnchorPane.rightAnchor="277.0" AnchorPane.topAnchor="137.0">
         <children>
            <Label text="Log In to Your Account">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <VBox prefWidth="320.0" spacing="5.0">
               <children>
                  <Label text="Email Address">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <!-- تم تصحيح fx:id هنا ليتطابق مع الكنترولر -->
                  <TextField fx:id="emailField" prefHeight="40.0" promptText="example@email.com" />
               </children>
            </VBox>
            <VBox prefWidth="320.0" spacing="5.0">
               <children>
                  <Label text="Password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <!-- تم تصحيح fx:id هنا ليتطابق مع الكنترولر -->
                  <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Your password" />
               </children>
            </VBox>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="320.0" style="-fx-background-color: #000080; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Log In">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <!-- تم تصحيح onAction هنا ليتطابق مع الكنترولر -->
            <Hyperlink fx:id="signupLink" onAction="#handleSignupLink" text="Don't have an account? Sign up" />
         </children>
      </VBox>
   </children>
</AnchorPane>