<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@/fxml/tenants-style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.javaapp3.TenantsViewController">
   <left>
      <VBox prefWidth="250.0" styleClass="sidebar" />
   </left>
   <top>
      <VBox prefHeight="720.0" prefWidth="1187.0" style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
               <padding><Insets left="20.0" right="20.0" /></padding>
               <children>
                  <Label text="Tenants"><font><Font name="System Bold" size="36.0" /></font></Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <!-- === تم ربط الزر بالدالة الصحيحة هنا === -->
                  <Button fx:id="addTenantButton" mnemonicParsing="false" onAction="#handleAddTenantButton" styleClass="add-button" text="Add Tenant" />
               </children>
            </HBox>
            <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
               <VBox.margin><Insets bottom="20.0" left="20.0" right="20.0" /></VBox.margin>
               <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Registered Tenants" />
                  <TableView fx:id="tenantsTable" VBox.vgrow="ALWAYS">
                   <!-- داخل TableView في ملف TenantsView.fxml -->
                   <columns>
  <TableColumn fx:id="tenantColumn" prefWidth="200.0" text="TENANT" />
  <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="PHONE" />
  
  <!-- === العمود الجديد هنا === -->
  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="STATUS" />
  
  <TableColumn fx:id="occupationColumn" prefWidth="150.0" text="OCCUPATION" />
  <TableColumn fx:id="addressColumn" prefWidth="300.0" text="ADDRESS" />
  <TableColumn fx:id="detailsColumn" prefWidth="100.0" text=" " />
                      </columns>
                     <VBox.margin><Insets top="20.0" /></VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
</BorderPane>
