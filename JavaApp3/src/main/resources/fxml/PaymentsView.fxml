<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@/fxml/tenants-style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaapp3.PaymentsViewController">
   
   <!-- 1. القائمة الجانبية -->
   <left>
      <VBox styleClass="sidebar" prefWidth="250.0">
         <children>
            <Label styleClass="sidebar-title" alignment="CENTER" prefHeight="80.0" prefWidth="250.0" text="ARM System" />
            <Button onAction="#handleGoToDashboard" styleClass="sidebar-button" text="Dashboard" />
            <Button onAction="#handleGoToOwners" styleClass="sidebar-button" text="Owners" />
            <Button onAction="#handleGoToTenants" styleClass="sidebar-button" text="Tenants" />
            <Button onAction="#handleGoToApartments" styleClass="sidebar-button" text="Apartments" />
            <Button styleClass="sidebar-button-selected" text="Payments" />
            <Button onAction="#handleGoToAssignApartment" styleClass="sidebar-button" text="Assign Apartment"/>
         </children>
      </VBox>
   </left>

   <!-- 2. المحتوى الرئيسي -->
   <center>
      <VBox style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <!-- الشريط العلوي -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
               <padding><Insets left="20.0" right="20.0" /></padding>
               <children>
                  <Label text="Payments">
                     <font><Font name="System Bold" size="36.0" /></font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addPaymentButton" onAction="#handleAddPayment" styleClass="add-button" text="Add Payment" />
               </children>
            </HBox>
            
            <!-- الحاوية البيضاء للجدول -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
               <VBox.margin><Insets bottom="20.0" left="20.0" right="20.0" /></VBox.margin>
               <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
               <children>
                  <Label text="Registered Payments" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                  
                  <!-- 3. الجدول مع خاصية vgrow -->
                  <TableView fx:id="paymentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="idColumn" prefWidth="70.0" text="ID" />
                      <TableColumn fx:id="tenantIdColumn" prefWidth="120.0" text="Tenant ID" />
                      <TableColumn fx:id="apartmentIdColumn" prefWidth="120.0" text="Apartment ID" />
                      <TableColumn fx:id="paymentDateColumn" prefWidth="150.0" text="Payment Date" />
                      <TableColumn fx:id="amountColumn" prefWidth="120.0" text="Amount" />
                      <TableColumn fx:id="paymentMethodColumn" prefWidth="150.0" text="Payment Method" />
                      <TableColumn fx:id="paymentStatusColumn" prefWidth="120.0" text="Payment Status" />
                      <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                    </columns>
                     <VBox.margin><Insets top="20.0" /></VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>