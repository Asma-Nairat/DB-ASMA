<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@/fxml/tenants-style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.javaapp3.PaymentsViewController">
   <left>
      <VBox prefWidth="250.0" styleClass="sidebar" />
   </left>
   <top>
      <VBox style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <children>
                  <Label text="Payments">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addPaymentButton" mnemonicParsing="false" onAction="#handleAddPaymentButton" styleClass="add-button" text="Add Payment" />
               </children>
            </HBox>
            <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Registered Payments" />
                  <TableView fx:id="paymentsTable" VBox.vgrow="ALWAYS">
                   <columns>
                      <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
<TableColumn fx:id="tenantIdColumn" prefWidth="150.0" text="Tenant ID" />
<TableColumn fx:id="apartmentIdColumn" prefWidth="200.0" text="Apartment ID" />
<TableColumn fx:id="paymentDateColumn" prefWidth="120.0" text="Payment Date" />
<TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount" />
<TableColumn fx:id="paymentMethodColumn" prefWidth="120.0" text="Payment Method" />
<TableColumn fx:id="paymentStatusColumn" prefWidth="120.0" text="Payment Status" />
<TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                   </columns>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </top>
</BorderPane>
