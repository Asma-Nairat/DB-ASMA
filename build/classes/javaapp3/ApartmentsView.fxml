<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
    fx:controller يربط هذا الملف بملف الجافا الذي سيتحكم فيه.
    تأكد من أن مسار الحزمة (com.yourproject) صحيح.
-->
<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaapp3.ApartmentsViewController">
   <left>
      <!-- ==================== القائمة الجانبية ==================== -->
      <VBox prefWidth="250.0" style="-fx-background-color: #383838;">
         <children>
            <!-- عنوان النظام -->
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="250.0" style="-fx-background-color: #000080; -fx-text-fill: white;" text="ARM System">
               <font><Font name="System Bold" size="24.0" /></font>
            </Label>
            
            <!-- زر لوحة التحكم -->
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 0 0 0 20px;" text="Dashboard" />
            
            <!-- زر الملاك -->
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 0 0 0 20px;" text="Owners" />
            
            <!-- زر المستأجرين -->
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 0 0 0 20px;" text="Tenants" />
            
            <!-- زر الشقق (النشط) -->
            <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #0000B0; -fx-text-fill: white; -fx-font-size: 16px; -fx-alignment: center-left; -fx-padding: 0 0 0 20px; -fx-border-color: white transparent transparent transparent; -fx-border-width: 2;" text="Apartments" />
            
            <!-- يمكنك إضافة بقية الأزرار هنا بنفس الطريقة -->
         </children>
      </VBox>
   </left>
   <center>
      <!-- ==================== المحتوى الرئيسي ==================== -->
      <VBox style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <!-- الشريط العلوي الذي يحتوي على العنوان وزر الإضافة -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
               <padding><Insets left="20.0" right="20.0" /></padding>
               <children>
                  <!-- عنوان الصفحة -->
                  <Label text="Apartments">
                     <font><Font name="System Bold" size="36.0" /></font>
                  </Label>
                  <!-- عنصر فارغ لدفع الزر إلى أقصى اليمين -->
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <!-- 
                    fx:id هو المعرف البرمجي للزر ليتم استخدامه في الجافا.
                    onAction هو اسم الدالة التي ستُنفذ عند الضغط على الزر.
                  -->
                  <Button fx:id="addApartmentButton" mnemonicParsing="false" onAction="#handleAddApartment" style="-fx-background-color: #000080; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20 10 20;" text="+ Add Apartment" />
               </children>
            </HBox>
            
            <!-- لوحة التمرير التي ستحتوي على بطاقات الشقق -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
               <content>
                  <!-- 
                    هذه اللوحة هي التي سيتم إضافة بطاقات الشقق إليها برمجياً.
                    أعطيناها fx:id ليتمكن كود الجافا من الوصول إليها.
                  -->
                  <TilePane fx:id="apartmentsGrid" hgap="20.0" vgap="20.0">
                     <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
                  </TilePane>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </center>
</BorderPane>