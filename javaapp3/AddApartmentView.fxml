<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaapp3.AddApartmentController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Add Apartment" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      <GridPane hgap="10.0" vgap="15.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Apartment Name *" />
            <TextField fx:id="apartmentNameField" GridPane.columnIndex="1" />
            <Label text="Apartment Type *" GridPane.rowIndex="1" />
            <ComboBox fx:id="apartmentTypeCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Apartment Owner *" GridPane.rowIndex="2" />
            <TextField fx:id="apartmentOwnerField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Town *" GridPane.rowIndex="3" />
            <TextField fx:id="townField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Location *" GridPane.rowIndex="4" />
            <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Description" GridPane.rowIndex="5" />
            <TextArea fx:id="descriptionArea" prefHeight="80.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <Label text="Image" GridPane.rowIndex="6" />
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
               <children>
                  <Button fx:id="chooseImageButton" mnemonicParsing="false" onAction="#handleChooseImageButton" text="Choose Image..." />
                  <Label fx:id="imageNameLabel" text="No image selected" />
               </children>
            </HBox>
         </children>
      </GridPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" style="-fx-background-color: #A9A9A9;" text="Cancel" textFill="WHITE" />
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddButton" style="-fx-background-color: #000080; -fx-text-fill: white;" text="Add Apartment" />
         </children>
      </HBox>
   </children>
</VBox>